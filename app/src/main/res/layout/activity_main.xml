<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Счёт игры"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#1A8A5D"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00 : 00"
        android:layout_marginTop="30dp"
        android:textSize="100sp"
        android:textColor="#25B37A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score">

        <Button
            android:id="@+id/lionsTeam"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Команда Львы"
            android:backgroundTint="#CA8813"
            android:layout_marginEnd="30dp"/>

        <Button
            android:id="@+id/panthersTeam"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="Команда Пантеры"
            android:backgroundTint="#423F3A"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>